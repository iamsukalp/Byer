<?xml version="1.0" encoding="utf-8"?>
<ViewSwitcher xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/cart_viewSwitcher"
    android:paddingHorizontal="25dp"
    android:paddingTop="25dp"
    android:paddingBottom="15dp"
    android:layout_height="match_parent"
    tools:context=".Activities.CartActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/cart_shopName"
                android:text="shop name"
                android:layout_gravity="start"
                android:textAllCaps="true"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="SmallSp" />

            <TextView
                android:id="@+id/cart_addMoreBtn"
                android:text="Add More"
                android:drawableStart="@drawable/ic_add_12"
                android:layout_gravity="end"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="SmallSp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cart_list"
                android:layout_marginTop="24dp"
                android:scrollbars="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cart_shopName"
                app:layout_constraintBottom_toTopOf="@id/cart_delivery_mode"
                android:layout_width="0dp"
                android:layout_height="0dp"/>


            <TextView
                android:id="@+id/cart_delivery_mode_label"
                android:text="Delivery mode"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/cart_delivery_mode"
                app:layout_constraintBottom_toBottomOf="@id/cart_delivery_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RadioGroup
                android:orientation="horizontal"
                app:layout_constraintStart_toEndOf="@id/cart_delivery_mode_label"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toTopOf="@id/cart_payment_mode"
                android:id="@+id/cart_delivery_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/cart_delivery_pickup"
                    android:text="Pick Up"
                    android:background="@drawable/delivery_mode_radio_group_bg"
                    android:textSize="10sp"
                    android:textAlignment="viewStart"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_pickup_16"
                    android:button="@android:color/transparent"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"/>

                <RadioButton
                    android:id="@+id/cart_delivery_home"
                    android:text="Home Delivery"
                    android:button="@android:color/transparent"
                    android:textAlignment="viewStart"
                    android:drawablePadding="10dp"
                    android:textSize="10sp"
                    android:drawableStart="@drawable/ic_delivery_color_16"
                    android:background="@drawable/delivery_mode_radio_group_bg"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"/>
            </RadioGroup>

            <TextView
                android:id="@+id/cart_payment_mode_label"
                android:text="Payment mode"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/cart_payment_mode"
                app:layout_constraintBottom_toBottomOf="@id/cart_payment_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RadioGroup
                android:orientation="horizontal"
                app:layout_constraintStart_toEndOf="@id/cart_payment_mode_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/cart_payment_info_container"
                android:id="@+id/cart_payment_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/cart_payment_upi"
                    android:text="UPI payment"
                    android:background="@drawable/delivery_mode_radio_group_bg"
                    android:textSize="10sp"
                    android:textAlignment="viewStart"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_gpay"
                    android:button="@android:color/transparent"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"/>

                <RadioButton
                    android:id="@+id/cart_payment_cash"
                    android:text="Cash on delivery"
                    android:button="@android:color/transparent"
                    android:textAlignment="viewStart"
                    android:drawablePadding="10dp"
                    android:textSize="10sp"
                    android:drawableStart="@drawable/ic_cash"
                    android:background="@drawable/delivery_mode_radio_group_bg"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"/>
            </RadioGroup>

            <com.google.android.material.card.MaterialCardView
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/cart_placeOrderBtn"
                android:id="@+id/cart_payment_info_container"
                app:cardCornerRadius="15dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/logo_color_pay_info"
                android:elevation="4dp"
                android:layout_marginBottom="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginHorizontal="50dp"
                        android:layout_marginVertical="25dp"
                        android:textColor="@color/grey"
                        android:id="@+id/cart_orderTotal_label"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:text="Order Total: "
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/cart_orderTotal"
                        android:textColor="@color/grey"
                        android:text="20"
                        app:layout_constraintStart_toEndOf="@id/cart_orderTotal_label"
                        app:layout_constraintTop_toTopOf="@id/cart_orderTotal_label"
                        app:layout_constraintBottom_toBottomOf="@id/cart_orderTotal_label"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        app:layout_constraintStart_toStartOf="@+id/cart_orderTotal_label"
                        app:layout_constraintTop_toBottomOf="@id/cart_orderTotal_label"
                        android:layout_marginTop="8dp"
                        android:text="Delivery Charge: "
                        android:textColor="@color/grey"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        app:layout_constraintStart_toStartOf="@id/cart_orderTotal"
                        app:layout_constraintTop_toBottomOf="@id/cart_orderTotal"
                        android:layout_marginTop="8dp"
                        android:text="20"
                        android:textColor="@color/grey"
                        android:id="@+id/cart_delivery_charge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <View
                        app:layout_constraintStart_toStartOf="@id/cart_orderTotal_label"
                        app:layout_constraintEnd_toEndOf="@id/cart_orderTotal"
                        android:textColor="@color/grey"
                        app:layout_constraintTop_toBottomOf="@id/cart_delivery_charge"
                        android:layout_width="0dp"
                        android:layout_height="1dp"/>
                    <TextView
                        app:layout_constraintStart_toStartOf="@id/cart_orderTotal_label"
                        app:layout_constraintTop_toBottomOf="@id/cart_orderTotal_label"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="25dp"
                        android:layout_marginTop="32dp"
                        android:text="Total Amount To Pay: "
                        android:textColor="@color/grey"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/cart_total"
                        android:text="20"
                        app:layout_constraintStart_toStartOf="@id/cart_orderTotal"
                        app:layout_constraintTop_toBottomOf="@id/cart_orderTotal"
                        android:layout_marginTop="32dp"
                        android:textColor="@color/grey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cart_placeOrderBtn"
                android:background="@drawable/bottombar_bg_logo"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Place Order"
                android:textAllCaps="false"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="35dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/cart_payment_status_anim"
            android:layout_gravity="center_horizontal"
            app:lottie_autoPlay="true"
            app:lottie_loop="false"
            android:layout_marginTop="24dp"
            android:layout_width="250dp"
            android:layout_height="250dp"/>

        <TextView
            android:id="@+id/cart_payment_status_text"
            android:layout_gravity="center_horizontal"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_marginTop="24dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="Success!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</ViewSwitcher>