<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/layout"
    android:layout_height="match_parent"
    tools:context=".Activities.HomeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/menu_backdrop_bg_logo"
        android:layout_width="match_parent"
        android:layout_height="400dp">

        <include
            android:id="@+id/homeTopDownMenu"
            layout="@layout/top_down_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.355"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_menu_close_btn"
            app:layout_constraintVertical_bias="0.0" />

        <ImageButton
            android:id="@+id/home_menu_close_btn"
            android:src="@drawable/ic_close"
            android:background="#00000000"
            android:padding="20dp"
            android:tint="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_cart_container"
        android:layout_width="wrap_content"
        android:padding="10dp"
        app:layout_constraintEnd_toStartOf="@id/home_notification_container"
        app:layout_constraintTop_toTopOf="@id/home_notification_container"
        app:layout_constraintBottom_toBottomOf="@id/home_notification_container"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/home_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:backgroundTint="?attr/colorAccent"
            android:src="@drawable/ic_cart_btn"
            android:tint="@color/logo_color"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:layout_weight="1"
            />
        <TextView
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textAlignment="center"
            android:text="3"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/badge_bg_logo"
            android:id="@+id/home_cart_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_notification_container"
        android:layout_width="wrap_content"
        android:padding="10dp"
        app:layout_constraintEnd_toStartOf="@id/home_menu_openBtn"
        app:layout_constraintTop_toTopOf="@id/home_menu_openBtn"
        app:layout_constraintBottom_toBottomOf="@id/home_menu_openBtn"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/home_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:backgroundTint="?attr/colorAccent"
            android:src="@drawable/ic_notification"
            android:tint="@color/logo_color"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:layout_weight="1"
            />
        <TextView
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textAlignment="center"
            android:text="3"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/badge_bg_logo"
            android:id="@+id/home_notification_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageButton
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="12dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="16dp"
        android:tint="@color/logo_color"
        android:src="@drawable/ic_menu"
        android:background="#00000000"
        android:id="@+id/home_menu_openBtn"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/home_menu_openBtn"
        app:layout_constraintBottom_toTopOf="@id/bottom_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <com.ismaeldivita.chipnavigation.ChipNavigationBar
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:background="@drawable/bottombar_bg_logo"
        android:padding="8dp"
        app:cnb_iconSize="28dp"
        android:elevation="16dp"
        android:layout_margin="16dp"
        android:layout_height="wrap_content"
        app:cnb_unselectedColor="@android:color/darker_gray"
        app:cnb_menuResource="@menu/menu_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>