<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="12dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/cart_list_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="16sp"
        android:text="ItemName"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/cart_list_quantity"
        app:layout_constraintStart_toStartOf="@id/cart_list_name"
        app:layout_constraintTop_toBottomOf="@id/cart_list_name"
        android:text="1KG"
        android:textSize="12sp"
        android:textAllCaps="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cart_list_price"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bottombar_bg_logo"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_gravity="center_vertical|start"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/ic_substract"
            android:id="@+id/cart_list_substract"
            android:padding="10dp"
            android:layout_width="10dp"
            android:layout_height="10dp"/>
        <TextView
            android:layout_gravity="center"
            android:id="@+id/cart_list_count"
            android:maxLength="2"
            android:layout_marginHorizontal="5dp"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/cart_list_add"
            android:backgroundTint="@android:color/transparent"
            android:padding="10dp"
            android:src="@drawable/ic_add"
            android:layout_gravity="center_vertical|end"
            android:layout_width="10dp"
            android:layout_height="10dp"/>
    </LinearLayout>

    <TextView
        android:textAlignment="textEnd"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/cart_list_price"
        android:layout_width="60dp"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>