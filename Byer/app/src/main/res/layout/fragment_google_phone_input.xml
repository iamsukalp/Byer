<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.GooglePhoneInputFragment">


    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/byer_logo"
        android:layout_marginHorizontal="36dp"
        app:layout_constraintVertical_bias="0.2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/googlePhoneInput_phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textCursorDrawable="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        android:hint="Phone Number"
        android:inputType="phone|textNoSuggestions"
        android:paddingHorizontal="36dp"
        android:textColorHint="@color/logo_color"
        android:textSize="20sp"
        app:layout_constraintVertical_bias="0.45"
        android:layout_marginHorizontal="36dp"
        android:paddingVertical="10dp"
        android:textColor="@color/logo_color"
        android:layout_width="0dp"
        android:background="@drawable/bottombar_bg_logo"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/googlePhoneInput_otp"
        app:layout_constraintTop_toBottomOf="@id/googlePhoneInput_phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textCursorDrawable="@null"
        android:layout_marginTop="25dp"
        android:hint="OTP"
        android:maxLength="6"
        android:inputType="textNoSuggestions|number"
        android:paddingHorizontal="36dp"
        android:textColorHint="@color/logo_color"
        android:textSize="20sp"
        app:layout_constraintVertical_bias="0.45"
        android:layout_marginHorizontal="36dp"
        android:paddingVertical="10dp"
        android:textColor="@color/logo_color"
        android:layout_width="0dp"
        android:background="@drawable/bottombar_bg_logo"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/googlePhoneInput_continue"
        android:background="@drawable/bottombar_bg_logo"
        android:textColor="@color/logo_color"
        app:layout_constraintEnd_toEndOf="@id/googlePhoneInput_otp"
        app:layout_constraintTop_toBottomOf="@id/googlePhoneInput_otp"
        android:layout_marginTop="25dp"
        android:textSize="18sp"
        android:paddingHorizontal="30dp"
        android:text="Continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>