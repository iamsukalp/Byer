<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.SignUpFragment">
    <ImageView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.2"
        android:layout_marginHorizontal="70dp"
        android:src="@drawable/byer_logo"
        android:adjustViewBounds="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>


    <EditText
        android:id="@+id/signup_phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.45"
        android:textCursorDrawable="@null"
        android:hint="Phone Number"
        android:inputType="phone|textNoSuggestions"
        android:paddingHorizontal="36dp"
        android:textColorHint="@color/logo_color"
        android:textSize="20sp"
        android:layout_marginHorizontal="36dp"
        android:paddingVertical="10dp"
        android:textColor="@color/logo_color"
        android:layout_width="0dp"
        android:background="@drawable/bottombar_bg_logo"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/signup_otp_container"
        android:orientation="horizontal"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@id/signup_phone"
        android:layout_marginHorizontal="36dp"
        android:layout_marginTop="25dp"
        android:paddingHorizontal="36dp"
        android:paddingVertical="10dp"
        android:background="@drawable/bottombar_bg_logo"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <EditText
            android:id="@+id/signup_otp"
            android:textSize="20sp"
            android:background="@color/white"
            android:hint="OTP"
            android:textCursorDrawable="@null"
            android:maxLength="16"
            android:inputType="text|textNoSuggestions"
            android:layout_weight="0.9"
            android:textColorHint="@color/logo_color"
            android:textColor="@color/logo_color"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/signup_otp_resendBtn"
            android:src="@drawable/ic_resend"
            android:tint="@color/logo_color"
            android:background="@android:color/transparent"
            android:layout_weight="0.1"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signup_continueBtn"
        android:background="@drawable/bottombar_bg_logo"
        android:textColor="@color/logo_color"
        app:layout_constraintEnd_toEndOf="@id/signup_otp_container"
        app:layout_constraintTop_toBottomOf="@id/signup_otp_container"
        android:layout_marginTop="25dp"
        android:textSize="18sp"
        android:paddingHorizontal="30dp"
        android:text="Continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:background="@color/logo_color_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signup_continueBtn"
        android:layout_marginHorizontal="36dp"
        android:layout_marginTop="25dp"
        android:layout_width="0dp"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/signup_user_label"
        app:layout_constraintStart_toStartOf="@id/signup_otp_container"
        app:layout_constraintTop_toTopOf="@id/signup_loginBtn"
        app:layout_constraintBottom_toBottomOf="@id/signup_loginBtn"
        android:layout_marginStart="100dp"
        android:text="Already a user?"
        android:textColor="@color/logo_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/signup_loginBtn"
        app:layout_constraintStart_toEndOf="@id/signup_user_label"
        app:layout_constraintTop_toBottomOf="@id/signup_otp_container"
        android:layout_marginStart="12dp"
        android:padding="10dp"
        android:text="@string/log_in"
        android:layout_marginTop="105dp"
        android:textColor="@color/logo_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>