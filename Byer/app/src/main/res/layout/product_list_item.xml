<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="8dp"
    android:elevation="12dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="160dp"
        android:layout_height="wrap_content">

        <ImageView
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/product_list_image"
            android:src="@mipmap/ic_launcher"
            android:layout_width="160dp"
            android:layout_height="120dp"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/product_list_name"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="5dp"
            android:text="Android"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="14sp"
            android:autoSizeMinTextSize="8dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/product_list_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/product_list_quantity"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="5dp"
            android:text="1 KG"
            android:textAllCaps="true"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/product_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/product_list_price"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="5dp"
            android:text="Rs 25"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black"
            android:textAllCaps="true"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/product_list_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/product_list_item_action_container"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/product_list_price"
            android:background="@drawable/product_list_btn_bg"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ViewSwitcher
                android:id="@+id/item_viewSwitcher"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/product_list_addToCart"
                        android:text="ADD"
                        android:textColor="@color/black"
                        android:drawablePadding="5dp"
                        android:drawableEnd="@drawable/ic_add_to_cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:id="@+id/product_list_substract"
                        android:layout_gravity="center_vertical|start"
                        android:backgroundTint="#00000000"
                        android:src="@drawable/ic_substract"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>
                    <TextView
                        android:id="@+id/product_list_count"
                        android:maxLength="2"
                        android:layout_gravity="center"
                        android:textSize="14sp"
                        android:text="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageButton
                        android:id="@+id/product_list_add"
                        android:layout_gravity="center_vertical|end"
                        android:backgroundTint="#00000000"
                        android:src="@drawable/ic_add"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>
                </LinearLayout>
            </ViewSwitcher>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>