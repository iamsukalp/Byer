<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="80dp"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:layout_marginHorizontal="10dp"
    android:id="@+id/subcategory_layout"
    android:elevation="2dp"
    android:background="@drawable/subcategory_bg"
    android:layout_height="100dp"
   >


    <ImageView
        android:layout_marginTop="20dp"
        android:id="@+id/subcategory_list_image"
        android:src="@drawable/byer_logo"
        android:layout_gravity="center"
        android:layout_width="40dp"
        android:layout_height="40dp"/>


    <TextView
        android:id="@+id/subcategory_list_name"
        android:layout_width="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/grey"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="Processed Food"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_height="wrap_content"/>

</LinearLayout>

