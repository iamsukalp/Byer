<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/deliveryCharge_layout"
    android:layout_height="match_parent"
    android:paddingHorizontal="45dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.SettingsFragment">

    <EditText
        android:id="@+id/deliveryCharge_2km"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="number|textNoSuggestions"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.4"
        android:hint="Delivery charge up to 2 KM"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/deliveryCharge_2kmto3km"
        app:layout_constraintStart_toStartOf="parent"
        android:inputType="number|textNoSuggestions"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/deliveryCharge_2km"
        android:hint="Delivery charge up to 2 KM"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/deliveryCharge_3kmto5km"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:inputType="number|textNoSuggestions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/deliveryCharge_2kmto3km"
        android:hint="Delivery charge up to 2 KM"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/deliveryCharge_saveBtn"
        android:text="Save"
        app:layout_constraintEnd_toEndOf="@id/deliveryCharge_3kmto5km"
        app:layout_constraintTop_toBottomOf="@id/deliveryCharge_3kmto5km"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/logo_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>