<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.InProgressOrderActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/inProgress_mapContainer"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="4dp"
        app:layout_constraintVertical_bias="0.1"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.google.android.gms.maps.MapView
            android:id="@+id/inProgress_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/inProgress_statusList"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@+id/inProgress_mapContainer"
        android:layout_width="match_parent"
        android:layout_height="250dp"/>

    <com.skydoves.transformationlayout.TransformationLayout
        android:id="@+id/inProgress_transformationLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:transformation_duration="550"
        app:layout_optimizationLevel="standard"
        app:transformation_targetView="@+id/inProgress_itemListContainer">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/inProgress_itemBtn"
            android:src="@drawable/ic_list"
            app:backgroundTint="@color/white"
            android:layout_marginStart="12dp"
            android:layout_marginVertical="12dp"
            android:layout_marginEnd="24dp"
            app:tint="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </com.skydoves.transformationlayout.TransformationLayout>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/inProgress_itemListContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:visibility="gone"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/inProgress_itemList"
            android:layout_margin="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>