<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/add_item_bg"
    android:layout_height="match_parent"
    tools:context=".Activities.ProductDetailsActivity">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/productDetailsCardView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.1"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/productDetailsProductImage"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_image_placeholder" />
    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/productDetailsProductNameET"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/logo_color"
        android:ems="10"
        android:hint="Product Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productDetailsCardView" />

    <Spinner
        android:id="@+id/productDetailsCategorySpinner"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:spinnerMode="dialog"
        android:entries="@array/subcategory_grocery"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/logo_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productDetailsProductNameET" />

    <EditText
        android:id="@+id/productDetailsMRPET"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/logo_color"
        android:ems="10"
        android:hint="@string/Rs"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toStartOf="@+id/productDetailsSPET"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productDetailsCategorySpinner" />

    <EditText
        android:id="@+id/productDetailsSPET"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/logo_color"
        android:ems="10"
        android:hint="@string/Rs"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/productDetailsMRPET"
        app:layout_constraintTop_toTopOf="@+id/productDetailsMRPET" />

    <EditText
        android:id="@+id/productDetailsQuantityET"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/logo_color"
        android:ems="10"
        android:hint="Quantity"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toStartOf="@+id/productDetailsUnitET"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productDetailsMRPET" />

    <EditText
        android:id="@+id/productDetailsUnitET"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/logo_color"
        android:ems="10"
        android:hint="Unit"
        android:clickable="false"
        android:focusable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/productDetailsQuantityET"
        app:layout_constraintTop_toTopOf="@+id/productDetailsQuantityET" />


    <EditText
        android:id="@+id/productDetailsDescriptionET"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/logo_color"
        android:ems="10"
        android:hint="Product Description"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productDetailsTotalAvailableQuantityET" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Product Description"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/productDetailsDescriptionET"
        app:layout_constraintStart_toStartOf="@+id/productDetailsDescriptionET" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Quantity"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/productDetailsQuantityET"
        app:layout_constraintStart_toStartOf="@+id/productDetailsQuantityET" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Unit"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/productDetailsUnitET"
        app:layout_constraintStart_toStartOf="@+id/productDetailsUnitET" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="MRP"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/productDetailsMRPET"
        app:layout_constraintStart_toStartOf="@+id/productDetailsMRPET" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Selling Price"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/productDetailsSPET"
        app:layout_constraintStart_toStartOf="@+id/productDetailsSPET" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Category"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/productDetailsCategorySpinner"
        app:layout_constraintStart_toStartOf="@+id/productDetailsCategorySpinner" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Product Name"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/productDetailsProductNameET"
        app:layout_constraintStart_toStartOf="@+id/productDetailsProductNameET" />


    <EditText
        android:id="@+id/productDetailsTotalAvailableQuantityET"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/logo_color"
        android:ems="10"
        android:hint="Total Available Quantity"
        android:inputType="number|textNoSuggestions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productDetailsQuantityET" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Total Available Quantity"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/productDetailsTotalAvailableQuantityET"
        app:layout_constraintStart_toStartOf="@+id/productDetailsTotalAvailableQuantityET" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/productDetailsAddProductBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/bottombar_bg_logo"
        android:backgroundTint="@color/logo_color"
        android:paddingHorizontal="30dp"
        android:text="Add Product"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productDetailsDescriptionET" />
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>