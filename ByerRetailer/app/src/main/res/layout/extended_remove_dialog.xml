<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/extended_remove_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/dialog_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/extended_remove_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="24dp"
            android:text="Are you sure you want to remove this item?"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/extended_remove_cancelBtn"
            android:background="@drawable/button_invert_bg"
            app:layout_constraintEnd_toEndOf="@id/extended_remove_title"
            app:layout_constraintTop_toBottomOf="@id/extended_remove_title"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textAllCaps="false"
            android:layout_marginTop="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/extended_remove_confirmBtn"
            android:background="@drawable/button_invert_bg"
            app:layout_constraintBottom_toBottomOf="@id/extended_remove_cancelBtn"
            app:layout_constraintEnd_toStartOf="@id/extended_remove_cancelBtn"
            android:layout_marginEnd="24dp"
            app:layout_constraintTop_toTopOf="@id/extended_remove_cancelBtn"
            android:text="Confirm"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </androidx.constraintlayout.widget.ConstraintLayout>



    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/extended_remove_closeBtn"
        android:src="@drawable/ic_close_close"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/extended_remove_container"
        app:backgroundTint="#BF000000"
        app:rippleColor="@null"
        android:elevation="0dp"
        app:elevation="0dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="24dp"
        app:tint="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>