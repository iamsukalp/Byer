<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/homeFragmentLayout"
    android:layout_height="match_parent"
    tools:context=".Fragments.HomeFragment">
    <ViewSwitcher
        android:id="@+id/home_viewSwitcher"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/home_productListRecycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_gravity="center_vertical"
                app:lottie_rawRes="@raw/empty_list"
                app:lottie_loop="true"
                app:lottie_autoPlay="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Nothing to see here. Come back later."
                android:textStyle="bold"
                android:textColor="@color/grey"
                android:layout_marginHorizontal="35dp"
                android:textAlignment="center"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </ViewSwitcher>


    <com.skydoves.transformationlayout.TransformationLayout
        android:id="@+id/home_transformationLayout"
        app:layout_constraintBottom_toTopOf="@id/home_addItemBtn"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:transformation_duration="550"
        app:transformation_targetView="@+id/home_filterListContainer">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/home_filterItemBtn"
            android:src="@drawable/ic_filter"
            app:backgroundTint="@color/white"
            android:layout_marginStart="12dp"
            android:layout_marginVertical="12dp"
            android:layout_marginEnd="24dp"
            app:tint="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </com.skydoves.transformationlayout.TransformationLayout>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/home_filterListContainer"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:visibility="gone"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/logo_color"
        app:cardCornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <ListView
               android:id="@+id/home_filterList"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toTopOf="@id/home_cancelFilterBtn"
               android:layout_marginTop="24dp"
               android:entries="@array/subcategory_grocery"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               android:layout_marginHorizontal="12dp"
               android:layout_marginBottom="8dp"
               android:layout_width="0dp"
               android:layout_height="0dp"/>

           <androidx.appcompat.widget.AppCompatButton
               android:id="@+id/home_cancelFilterBtn"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               android:layout_marginBottom="12dp"
               android:text="Cancel"
               android:layout_marginEnd="10dp"
               android:drawableStart="@drawable/ic_close_color"
               android:paddingHorizontal="25dp"
               android:drawablePadding="10dp"
               android:textColor="@color/white"
               android:background="@drawable/button_invert_bg"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>


       </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/home_addItemBtn"
        android:src="@drawable/ic_plus"
        app:backgroundTint="@color/white"
        app:tint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginVertical="12dp"
        android:layout_marginEnd="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>