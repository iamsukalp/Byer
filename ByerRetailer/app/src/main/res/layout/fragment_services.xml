<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.ServicesFragment">

    <TextView
        android:id="@+id/services_subscription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.1"
        android:layout_marginEnd="5dp"
        android:textAlignment="center"
        android:text="Manage your subscription"
        android:drawableEnd="@drawable/ic_right_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageButton
        android:id="@+id/services_delivery"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.2"
        android:src="@drawable/delivery"
        android:transitionName="service_title_transition"
        android:paddingStart="-20dp"
        android:adjustViewBounds="true"
        android:backgroundTint="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageButton
        android:id="@+id/services_accounting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/services_delivery"
        android:layout_marginTop="15dp"
        android:paddingEnd="-25dp"
        android:transitionName="service_title_transition"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/accounting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageButton
        android:id="@+id/services_management"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       app:layout_constraintStart_toStartOf="parent"
        android:transitionName="service_title_transition"
        app:layout_constraintTop_toBottomOf="@id/services_accounting"
        android:layout_marginTop="15dp"
        android:paddingStart="-25dp"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/managment"
        />

    <ImageButton
        android:id="@+id/services_marketing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:transitionName="service_title_transition"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/services_management"
        android:layout_marginTop="15dp"
        android:paddingEnd="-25dp"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/marketing"
        />

</androidx.constraintlayout.widget.ConstraintLayout>