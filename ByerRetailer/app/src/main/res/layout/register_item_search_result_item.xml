<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingVertical="16dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:cardElevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="16dp"
        android:id="@+id/registerItem_search_item_image_container"
        >
        <ImageView
            android:id="@+id/registerItem_search_item_image"
            android:scaleType="centerInside"
            android:src="@drawable/ic_image_placeholder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>


    <TextView
        app:layout_constraintStart_toEndOf="@id/registerItem_search_item_image_container"
        app:layout_constraintTop_toTopOf="@id/registerItem_search_item_image_container"
        android:layout_marginTop="16dp"
        android:text="Name"
        android:textColor="@color/white"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeMaxTextSize="22sp"
        android:autoSizeStepGranularity="2sp"
        android:textSize="22sp"
        android:layout_marginStart="16dp"
        android:id="@+id/registerItem_search_item_name"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:targetApi="o" />
    <TextView
        app:layout_constraintStart_toEndOf="@id/registerItem_search_item_image_container"
        app:layout_constraintTop_toBottomOf="@id/registerItem_search_item_name"
        android:layout_marginTop="8dp"
        android:text="Brand"
        android:textColor="@color/white"
        android:layout_marginStart="16dp"
        android:id="@+id/registerItem_search_item_brand"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>